<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.example.mohammad.powermanagement.PlugControl"
android:id="@+id/plugdata">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Turn_on__Plug001"
    android:id="@+id/TurnOn"
    android:padding="20dp"
    android:textSize="10dp"
    android:layout_below="@+id/TurnOff"
    android:layout_centerHorizontal="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Turn_OFF_Plug001"
    android:id="@+id/TurnOff"
    android:padding="20dp"
    android:textSize="10dp"
    android:layout_alignParentTop="true"
    android:layout_alignLeft="@+id/TurnOn"
    android:layout_alignStart="@+id/TurnOn" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show"
    android:id="@+id/getit"
    android:layout_alignBottom="@+id/moment"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/moment"
    android:hint="Enter a Minute In last One Hour"
    android:textSize="15dp"
    android:layout_below="@+id/TurnOn"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="194dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="See Plug001 Energy Consumption In Last One Hour Localy"
    android:id="@+id/textView3"
    android:textSize="15dp"
    android:gravity="center"
    android:textColor="@android:color/background_dark"
    android:layout_above="@+id/getit"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="40dp" />

</RelativeLayout>
